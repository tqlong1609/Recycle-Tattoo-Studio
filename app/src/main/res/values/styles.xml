<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--login theme-->
        <!--Text view sign in-->
    <style name="TextLoginTheme">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">monospace</item>
    </style>
        <!--Text view version-->
    <style name="TextVersionTheme">
        <item name="android:text">@string/version_text</item>
        <item name="android:textStyle">italic</item>
    </style>
        <!--Edit text-->
    <style name="EditLoginTheme">
        <item name="android:ems">15</item>
        <item name="android:background">@drawable/edit_login_normal</item>
        <item name="android:fontFamily">monospace</item>
    </style>
        <!--Button-->
    <style name="BtnLoginTheme">
        <item name="android:background">@drawable/btn_login_selector</item>
        <item name="android:text">@string/sign_in_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">monospace</item>
    </style>
    
    <!--Header information theme-->
    <style name="TextHeader">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!--activity style-->
        <!--Button-->
    <style name="BtnCreateNew">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
        <!--Text view-->
    <style name="TxtHistory">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Views history-->
    <style name="TxtStatus">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorYellowOrange</item>
    </style>

    <!-- Dialog remove-->
        <!--TextView-->
    <style name="TxtTitle">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
        <!--Button-->
    <style name="BtnCancel">
        <item name="android:textSize">@dimen/txt_size</item>
        <item name="android:background">@drawable/btn_cancel_selector</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:text">@string/btn_cancel</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BtnConfirm">
        <item name="android:textSize">@dimen/txt_size</item>
        <item name="android:background">@drawable/btn_login_selector</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:text">@string/btn_confirm</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Add activity-->
        <!--Text view-->
    <style name="TxtAddTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
        <!--Edit Text-->
    <style name="EditAddTheme">
        <item name="android:ems">16</item>
        <item name="android:background">@drawable/edit_add_normal</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <!--Edit Activity-->
        <!--Text View-->
    <style name="TxtTitleUpdate">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="TxtUpdate">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>
