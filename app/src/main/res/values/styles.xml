<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--login theme-->
        <!--Text view sign in-->
    <style name="TextLoginTheme">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">monospace</item>
    </style>
        <!--Text view version-->
    <style name="TextVersionTheme">
        <item name="android:text">@string/version_text</item>
        <item name="android:textStyle">italic</item>
    </style>
        <!--Edit text-->
    <style name="EditLoginTheme">
        <item name="android:ems">15</item>
        <item name="android:background">@drawable/edit_login_normal</item>
        <item name="android:fontFamily">monospace</item>
    </style>
        <!--Button-->
    <style name="BtnLoginTheme">
        <item name="android:background">@drawable/btn_login_selector</item>
        <item name="android:text">@string/sign_in_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">monospace</item>
    </style>
    
    <!--Header information theme-->
    <style name="TextHeader">
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>
