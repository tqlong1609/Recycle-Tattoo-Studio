<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/background_image"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:id="@+id/tattoo_image"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginTop="@dimen/margin_top_image"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height" />

    <TextView
        android:layout_marginLeft="@dimen/margin_left_text"
        android:layout_marginTop="@dimen/margin_top_text"
        android:layout_below="@+id/tattoo_image"
        style="@style/TextLoginTheme"
        android:text="@string/phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>