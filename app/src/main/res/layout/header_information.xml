<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorPaleBrown"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:id="@+id/img_name"
        android:layout_width="@dimen/image_width_header"
        android:layout_height="@dimen/image_height_header"

        android:layout_marginStart="@dimen/padding_small"
        android:layout_marginTop="@dimen/padding_small"
        android:background="#ff0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_name"
        style="@style/TextHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="Recycle Tattoo Studio"
        app:layout_constraintStart_toEndOf="@+id/img_name"
        app:layout_constraintTop_toTopOf="@+id/img_name" />

    <ImageView
        android:id="@+id/img_birthday"
        android:layout_width="@dimen/image_width_header"
        android:layout_height="@dimen/image_height_header"
        android:layout_marginTop="8dp"
        android:background="#ff00"
        app:layout_constraintStart_toStartOf="@+id/img_name"
        app:layout_constraintTop_toBottomOf="@+id/img_name" />

    <TextView
        android:id="@+id/txt_birthday"
        style="@style/TextHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="24/03"
        app:layout_constraintStart_toEndOf="@+id/img_birthday"
        app:layout_constraintTop_toTopOf="@+id/img_birthday" />

    <ImageView
        android:id="@+id/img_phone"
        android:layout_width="@dimen/image_width_header"
        android:layout_height="@dimen/image_height_header"
        android:layout_marginTop="8dp"
        android:background="#1100FF"
        app:layout_constraintStart_toStartOf="@+id/img_birthday"
        app:layout_constraintTop_toBottomOf="@+id/img_birthday" />

    <TextView
        android:id="@+id/txt_phone"
        style="@style/TextHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="0928738373"
        app:layout_constraintStart_toEndOf="@+id/img_phone"
        app:layout_constraintTop_toTopOf="@+id/img_phone" />

    <ImageView
        android:id="@+id/img_email"
        android:layout_width="@dimen/image_width_header"
        android:layout_height="@dimen/image_height_header"
        android:layout_marginTop="8dp"
        android:background="#26FF00"
        app:layout_constraintStart_toStartOf="@+id/img_phone"
        app:layout_constraintTop_toBottomOf="@+id/img_phone" />

    <TextView
        style="@style/TextHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="caithungracx@gmail.com"
        app:layout_constraintStart_toEndOf="@+id/img_email"
        app:layout_constraintTop_toTopOf="@+id/img_email" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.864"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        style="@style/TextHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="12312312"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


</androidx.constraintlayout.widget.ConstraintLayout>